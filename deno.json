{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "files": {
      "include": [
        "src",
        "tests",
        "examples"
      ]
    }
  },
  "lint": {
    "files": {
      "include": [
        "src",
        "tests",
        "examples"
      ]
    }
  },
  "tasks": {
    "run": "deno run --allow-all src/cli/mod.ts",
    "run:example": "deno tasks run run ./examples/example.workflow.ts",
    "upgrade": "deno cache --reload https://raw.githubusercontent.com/SHIBUI-ENGINEERING/MAT/main/src/cli/mod.ts",
    "install": "deno install --allow-all -f -n mwat-dev https://raw.githubusercontent.com/SHIBUI-ENGINEERING/MAT/main/src/cli/mod.ts",
    "uninstall": "deno uninstall mwat-dev",
    "test": ""
  }
}
